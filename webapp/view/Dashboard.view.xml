<mvc:View 
	height="100%" 
	xmlns="sap.m" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:grid="sap.ui.layout.cssgrid" 
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core"
	xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="ysd.wa.wrkflapp.YSD_WA_WRKFLAPP.controller.Dashboard">
	<Shell>
		<App id="Dashboard">
			<Page title="{i18n>title}">
				<Panel width="100%" class="sapUiHideOnPhone">
					<f:GridList id="gridList3">
						<f:customLayout>
							<grid:GridBoxLayout boxWidth="18.7rem"/>
						</f:customLayout>
						<f:GridListItem id="GridListPendingApproval" class="roundborder">
							<VBox height="100%" justifyContent="SpaceBetween">
								<layoutData>
									<FlexItemData growFactor="1" shrinkFactor="0"/>
								</layoutData>
								<VBox class="sapUiSmallMargin headerButton">
									<HBox justifyContent="SpaceBetween">
										<core:Icon src="sap-icon://message-warning" size="2.6rem" color="Default" class="sapUiTinyMarginBottom"/>
										<ObjectStatus id="PendingApprovalHeader" text="" class="adjustFontSize"/>
									</HBox>
									<Title text="{i18n>MyPendingApproval}" wrapping="true"/>
									<!--<Text text="" width="15rem" wrapping="true"/>-->
								</VBox>
							</VBox>
						</f:GridListItem>
						<f:GridListItem id="GridListPendingOthers" class="roundborder">
							<VBox height="100%">
								<VBox justifyContent="SpaceBetween">
									<layoutData>
										<FlexItemData growFactor="1" shrinkFactor="0" /><!-- Don't shrink below minimum size. Fill space if available. -->
									</layoutData>
									<VBox class="sapUiSmallMargin headerButton">
										<HBox justifyContent="SpaceBetween">
											<core:Icon src="sap-icon://paper-plane" size="2.6rem" color="Default" class="sapUiTinyMarginBottom"/>
											<ObjectStatus id="PendingOthersHeader" text="" class="adjustFontSize" />
										</HBox>
										<Title text="{i18n>PendingOthers}" wrapping="true"/>
										<!--<Text text="" width="15rem" wrapping="true"/>-->
									</VBox>
								</VBox>
							</VBox>
						</f:GridListItem>
						<f:GridListItem id="GridListCompleted" class="roundborder">
							<VBox height="100%" justifyContent="SpaceBetween">
								<layoutData>
									<FlexItemData growFactor="1" shrinkFactor="0"/></layoutData>
								<VBox class="sapUiSmallMargin headerButton">
									<HBox justifyContent="SpaceBetween">
										<core:Icon src="sap-icon://accept" size="2.6rem" color="Default" class="sapUiTinyMarginBottom"/>
										<ObjectStatus id="CompletedHeader" text="" class="adjustFontSize"/>
									</HBox>
									<Title text="{i18n>Completed}" wrapping="true"/>
									<!--<Text text="" width="15rem" wrapping="true"/>-->
								</VBox>
							</VBox>
						</f:GridListItem>
						<f:GridListItem id="GridListRejected" class="roundborder">
							<VBox height="100%" justifyContent="SpaceBetween">
								<layoutData>
									<FlexItemData growFactor="1" shrinkFactor="0"/></layoutData>
								<VBox class="sapUiSmallMargin headerButton">
									<HBox justifyContent="SpaceBetween">
										<core:Icon src="sap-icon://cancel" size="2.6rem" color="Default" class="sapUiTinyMarginBottom"/>
										<ObjectStatus id="RejectedHeader" text="" class="adjustFontSize"/>
									</HBox>
									<Title text="{i18n>Rejected}" wrapping="true"/>
									<!--<Text text="" width="15rem" wrapping="true"/>-->
								</VBox>
							</VBox>
						</f:GridListItem>
					</f:GridList>
				</Panel>
				
				<Panel class="titlecolor sapUiHideOnPhone"  width="auto" >
					<Title id="TableTitle" text="" class="fontdesign"/>
				</Panel>
				
				<Table 
					id="SalesOrderTable"
					width="auto"
					class="sapUiHideOnPhone"
					items="{/}">
					<headerToolbar>
						<Toolbar class="EnlargeSearchField">
							<SearchField search=".onFilterSOnCustomer"/>
						</Toolbar>
					</headerToolbar>
					<columns>
						<Column  hAlign="Begin">
							<Text text="{i18n>SOCreatedDate}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>SalesOrder}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>CustomerCode}" />
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>CustomerName}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>TotalAmount}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>GM1Amount}" />
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>GM1%}"/>
						</Column>
					</columns>
					<items>
						<ColumnListItem 
							type="Navigation" press=".onPressNavigation">
							<cells>
								<Text text="{SoCreatedDate_DISPLAY}" />
								<Text text="{SalesOrder}" /> 
								<Text text="{CustomerCode}" /> 
								<Text text="{CustomerName}" /> 
								<Text text="{TotalAmountExVatFormatted}" /> 		<!--Begin of D00K9F5AQ4-->
								<Text text="{Gm1Formatted}" />  					<!--Begin of D00K9F5AQ4-->
								<Text text="{Gm1Percent}" />
								<Text text="{Guid}" />
							</cells>
						</ColumnListItem>
					</items>
				</Table>
				
				<Select
					id="MobileDropdownSelection"
					forceSelection="false"
					class="sapUiVisibleOnlyOnPhone"
					selectedKey="{/DefaultSelection}"
					width="100%"
					items="{
						path: '/Selection'
					}"
					change="onSelectChange">
					<core:ListItem key="{Id}" text="{Name} - {additionalText}" icon="{Icon}"/>
				</Select>
					
				<List
					id="MobileSOTable"
					class="sapUiVisibleOnlyOnPhone"
					items="{/}">
					<headerToolbar>
						<Toolbar class="EnlargeSearchField">
							<SearchField  search=".onFilterSOnCustomerONMobile" class="sapUiNoMargin" placeholder="{i18n>Search}"/>
						</Toolbar>
					</headerToolbar>
					<items>
						<ObjectListItem
							type="Active"
							press=".onListPressNavigation"
							title="{SalesOrder}"
							number="{
								parts:[{path:'TotalAmountExVatFormatted'},{path:'TotAmtCurrency'}],		
								type: 'sap.ui.model.type.number',
								formatOptions: {showMeasure: false}
							}"
							numberUnit="{i18n>MobileTotalAmtExclVAT}">									<!--Begin of D00K9F5AQ4-->
						<ObjectAttribute text="{CustomerName} {(CustomerCode)}" />
						<ObjectAttribute text="Req dd: {SoCreatedDate_DISPLAY}" />
						<ObjectAttribute text="GM1 Amt: {Gm1Formatted} ({Gm1Percent}%)" />				<!--Begin of D00K9F5AQ4-->
						</ObjectListItem>
					</items>
				</List>	
			</Page>
		</App>
	</Shell>
</mvc:View>